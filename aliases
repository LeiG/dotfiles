alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias la='ls -a'

# Create a new directory and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# attach to an existing session or create a new one if none is found
moshdev () {
  SERVER=$1
  COLO=$2
  mosh -6 $SERVER.$COLO.facebook.com -- tmux a
}
